<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @recommended, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: "form-control", rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :tag, "タグ" %>
          <%= f.text_field :tag, class: "form-control" %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="/" class="nav-link">TimeLine</a></li>
      <li class="nav-item"><a href="<%= search_path %>" class="nav-link <%= "active" %>">Search</a></li>
    </ul>
    <%= form_tag(search_path, :method => "get") do %>
      <%= text_field_tag :search %>
      <%= submit_tag "search" %>
    <% end %>
    <%= render "recommendeds/recommendeds", recommendeds: @recommendeds %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>FavoTimeLineにようこそ</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>